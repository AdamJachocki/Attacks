@page
@model _6_DataModificationControl.Areas.Identity.Pages.Account.LoginModel

<h1>Zaloguj się</h1>
<hr />
<div class="col-6">
    <form method="post">
            <div class="form-group">
                <label asp-for="LoginInfo.UserName">Nazwa użytkownika</label>
                <input type="text" asp-for="LoginInfo.UserName" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="LoginInfo.Password">Hasło</label>
                <input type="password" asp-for="LoginInfo.Password" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Zaloguj się</button>
        </form>
</div>

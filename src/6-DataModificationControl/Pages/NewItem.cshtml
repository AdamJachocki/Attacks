@page "{id?}"
@model _6_DataModificationControl.Pages.NewItemModel

<div class="col-6">
    <form method="post">
        <div class="form-group">
            <label asp-for="Item.Title">Tytuł</label>
            <input type="text" asp-for="Item.Title" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="Item.Description">Opis</label>
            <textarea asp-for="Item.Description" class="form-control"></textarea>
        </div>

        <hr />
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </form>
</div>
@page
@model _4_SQLInjection.Pages.LoginPageModel
@using Common.Models
@inject SignInManager<SystemUser> signInMan

@if(!signInMan.Context.User.Identity.IsAuthenticated)
{
    <h1>Logowanie</h1>
    <hr />

    <div class="col-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Login.UserName">Nazwa użytkownika</label>
                <input type="text" asp-for="Login.UserName" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Login.Password">Hasło</label>
                <input type="password" asp-for="Login.Password" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Zaloguj się</button>
        </form>
    </div>
}
